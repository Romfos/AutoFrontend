<UserControl x:Class="AutoFrontend.Wpf.Controls.Arguments.CustomStringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoFrontend.Wpf.Controls.Arguments"
             mc:Ignorable="d" 
             Margin="0,5,0,5"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <Label x:Name="label" Margin="0" Padding="0"/>
        <TextBox x:Name="textBox"
                 VerticalScrollBarVisibility="Disabled" 
                 HorizontalScrollBarVisibility="Disabled"/>
        <Label x:Name="errorLabel" Foreground="Red" Visibility="Collapsed" />
    </StackPanel>
</UserControl>
