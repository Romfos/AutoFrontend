<UserControl xmlns:Design="clr-namespace:AutoFrontend.Wpf.Controls.Design"  
             x:Class="AutoFrontend.Wpf.Controls.Functions.DefaultFunctionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="100"
             Margin="0,5,0,5">
    <StackPanel>
        <StackPanel x:Name="argumentStack" />
        <Button x:Name="executeButton" 
                Content="Execute" 
                Height="30" 
                MinWidth="80" 
                HorizontalAlignment="Stretch"
                Padding="5"/>
        <ProgressBar x:Name="progressBar" 
                     IsIndeterminate="True" 
                     Visibility="Collapsed"
                     Height="10" />
        <StackPanel x:Name="resultStack" Visibility="Collapsed" />
        <Design:ValidationControl x:Name="validationControl"/>
    </StackPanel>
</UserControl>
