<UserControl x:Class="AutoFrontend.Wpf.Controls.FunctionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="100"
             Width="300">
    <GroupBox x:Name="groupBox">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="argumentStack" Grid.Row="0"/>
            <Button x:Name="executeButton" Content="Execute" Grid.Row="1" Width="100" Height="30"/>
            <StackPanel x:Name="resultStack" Grid.Row="2" Visibility="Collapsed"/>
        </Grid>
    </GroupBox>
</UserControl>
